<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#000000"
    android:gravity="bottom" >

    <TextView
        android:id="@+id/textView01"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#000000"
        android:gravity="center_vertical|center"
        android:padding="5dip"
        android:text="(1)Public transport Satisfaction"
        android:textColor="#FFFFFF"
        android:textSize="@dimen/fontSizeQuestion"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:orientation="vertical"
        android:layout_gravity="bottom">
        <Button
            android:id="@+id/button_public_rate1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="① Very bad" />

        <Button
            android:id="@+id/button_public_rate2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="② Bad" />

        <Button
            android:id="@+id/button_public_rate3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="③ So so" />

        <Button
            android:id="@+id/button_public_rate4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="④ Good" />

        <Button
            android:id="@+id/button_public_rate5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="⑤ Very good" />

        <Button
            android:id="@+id/button_back"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Back"
            android:textStyle="bold" />
    </LinearLayout>
</LinearLayout>



